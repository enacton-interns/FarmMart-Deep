# Email Configuration for Password Reset
# Copy this file to .env.local and fill in your email credentials

# Gmail SMTP Configuration (for development)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password

# Application URL (for reset links)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/farmmart

INTERNAL_API_SECRET=generate-a-long-random-string

# JWT Secret
JWT_SECRET=your-jwt-secret-key-here

# Stripe Configuration (if using payments)
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# Other environment variables...
